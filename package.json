{
  "name": "armstrong-react",
  "version": "1.0.3",
  "description": "Rocketmakers Armstrong library of React components (For projects using npm @types from Typescript 2.0)",
  "main": "./dist/index.js",
  "style": "./dist/style.scss",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p source -d && node sass_concat.js",
    "test": "tsc -p source -d && jest",
    "prepublish": "npm run build",
    "patch": "npm --no-git-tag-version version patch -m \"Upgrade to %s\"",
    "prerelease": "npm --no-git-tag-version version prerelease -m \"Upgrade to %s\"",
    "patch-publish": "npm run patch && npm publish",
    "prerelease-publish": "npm run prerelease && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rocketmakers/armstrong-react.git"
  },
  "keywords": [
    "typescript",
    "React",
    "sass"
  ],
  "author": "developers@rocketmakers.com",
  "license": "MIT",
  "dependencies": {
    "@types/classnames": "*",
    "@types/underscore": "*",
    "classnames": "^2.2.5",
    "moment": "^2.15.1",
    "underscore": "^1.8.3"
  },
  "peerDependencies": {
    "@types/es6-promise": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "es6-promise": "3.x",
    "react": "15.x",
    "react-dom": "15.x"
  },
  "devDependencies": {
    "@types/enzyme": "^2.5.37",
    "@types/es6-promise": "*",
    "@types/jest": "^15.1.32",
    "@types/react": "*",
    "@types/react-dom": "*",
    "enzyme": "^2.5.1",
    "es6-promise": "^3.3.1",
    "import-resolve": "^0.3.0",
    "jest": "^16.0.2",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3"
  }
}
